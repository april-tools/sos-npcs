{
  "common": {
    "tboard-path": "tboard-runs/uci-data-exp-sos",
    "checkpoint-path": "checkpoints/uci-data-exp-sos",
    "save-checkpoint": false,
    "num-epochs": 1000,
    "device": "cuda",
    "num-workers": 2,
    "patience-threshold": 1e-3,
    "early-stop-patience": 25
  },
  "datasets": ["miniboone", "hepmass"],
  "grid": {
    "common": {
      "region-graph": "rnd-bt",
      "region-graph-sd": true,
      "batch-size": 512,
      "optimizer": "Adam",
      "verbose": true,
      "learning-rate": [1e-4, 5e-4, 1e-3, 5e-3]
    },
    "models": {
      "hepmass": {
        "ExpSOS": {
          "real": {
            "num-units,num-input-units": [[128, 128], [256, 256]],
            "mono-num-units,mono-num-input-units": [[2, 2], [16, 16]],
            "complex": false
          },
          "complex": {
            "num-units,num-input-units": [[64, 128], [128, 256]],
            "mono-num-units,mono-num-input-units": [[2, 2], [16, 16]],
            "complex": true
          }
        }
      },
      "miniboone": {
        "ExpSOS": {
          "real": {
            "num-units,num-input-units": [[128, 64], [256, 128]],
            "mono-num-units,mono-num-input-units": [[2, 2], [16, 16]],
            "complex": false
          },
          "complex": {
            "num-units,num-input-units": [[64, 64], [128, 128]],
            "mono-num-units,mono-num-input-units": [[2, 2], [16, 16]],
            "complex": true
          }
        }
      }
    }
  }
}
