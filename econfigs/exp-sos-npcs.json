{
  "common": {
    "tboard-path": "tboard-runs/uci-data-exp-sos",
    "checkpoint-path": "checkpoints/uci-data-exp-sos",
    "save-checkpoint": false,
    "num-epochs": 1000,
    "device": "cuda",
    "num-workers": 2,
    "patience-threshold": 1e-3,
    "early-stop-patience": 25
  },
  "datasets": ["miniboone", "hepmass"],
  "grid": {
    "common": {
      "region-graph": "rnd-bt",
      "region-graph-sd": true,
      "batch-size": 512,
      "optimizer": "Adam",
      "verbose": true,
      "learning-rate": [5e-4, 1e-3, 5e-3]
    },
    "models": {
      "hepmass": {
        "SOS": {
          "real": {
            "num-units": 128,
            "num-input-units": 128,
            "num-components": [2, 8, 16],
            "complex": false
          },
          "complex": {
            "num-units": 64,
            "num-input-units": 128,
            "num-components": [2, 8, 16],
            "complex": true
          }
        },
        "ExpSOS": {
          "real": {
            "num-units": 128,
            "num-input-units": 128,
            "mono-num-units,mono-num-input-units": [[2, 2], [16, 16], [32, 32]],
            "complex": false
          },
          "complex": {
            "num-units": 64,
            "num-input-units": 128,
            "mono-num-units,mono-num-input-units": [[2, 2], [16, 16], [32, 32]],
            "complex": true
          }
        }
      },
      "miniboone": {
        "SOS": {
          "real": {
            "num-units": 32,
            "num-input-units": 32,
            "num-components": [2, 8, 16],
            "complex": false
          },
          "complex": {
            "num-units": 16,
            "num-input-units": 32,
            "num-components": [2, 8, 16],
            "complex": true
          }
        },
        "ExpSOS": {
          "real": {
            "num-units": 32,
            "num-input-units": 32,
            "mono-num-units,mono-num-input-units": [[2, 2], [16, 16], [32, 32]],
            "complex": false
          },
          "complex": {
            "num-units": 16,
            "num-input-units": 32,
            "mono-num-units,mono-num-input-units": [[2, 2], [16, 16], [32, 32]],
            "complex": true
          }
        }
      }
    }
  }
}
