{
  "common": {
    "tboard-path": "tboard-runs/uci-data",
    "checkpoint-path": "checkpoints/uci-data",
    "save-checkpoint": true,
    "num-epochs": 1200,
    "device": "cuda",
    "num-workers": 2,
    "patience-threshold": 1e-3,
    "early-stop-patience": 5
  },
  "datasets": ["power", "gas", "hepmass", "miniboone"],
  "grid": {
    "common": {
      "region-graph": "random",
      "depth": -1,
      "splines": false,
      "spline-order": 2,
      "optimizer": "Adam",
      "verbose": true,
      "init-method": "uniform",
      "init-scale": 1.0,
      "num-replicas,num-components": [[1, 256], [4, 128], [16, 64], [64, 32], [256, 16]]
    },
    "models": {
      "power": {
        "MonotonicPC": {
          "init-method": "uniform",
          "spline-knots": 256,
          "batch-size": 8192,
          "learning-rate": 1e-2
        },
        "BornPC": {
          "real": {
            "init-method": "uniform",
            "spline-knots": 256,
            "batch-size": 8192,
            "learning-rate": 1e-3
          }
        }
      },
      "gas": {
        "MonotonicPC": {
          "spline-knots": 512,
          "batch-size": 4096,
          "learning-rate": 1e-2
        },
        "BornPC": {
          "real": {
            "spline-knots": 512,
            "batch-size": 4096,
            "learning-rate": 1e-3
          }
        }
      },
      "hepmass": {
        "MonotonicPC": {
          "spline-knots": 128,
          "batch-size": 2048,
          "learning-rate": 1e-2
        },
        "BornPC": {
          "real": {
            "spline-knots": 128,
            "batch-size": 2048,
            "learning-rate": 1e-3
          }
        }
      },
      "miniboone": {
        "MonotonicPC": {
          "spline-knots": 64,
          "batch-size": 1024,
          "learning-rate": 1e-2
        },
        "BornPC": {
          "real": {
            "spline-knots": 64,
            "batch-size": 1024,
            "learning-rate": 1e-3
          }
        }
      }
    }
  }
}
